<?xml version="1.0"?>
 
<datasources>
        <local-tx-datasource>
                <jndi-name>jdbc/<%= $jndiname %></jndi-name>
                <connection-url>jdbc:mysql://<%= dbhost %>:<%= dbport %>/<%= dbname %></connection-url>
                <driver-class>com.mysql.jdbc.Driver</driver-class>
                <user-name><%= dbuser %></user-name>
                <password><%= dbpass %></password>
                <min-pool-size><%= dbpool %></min-pool-size>
        </local-tx-datasource>
</datasources>
